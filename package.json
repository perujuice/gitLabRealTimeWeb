  "type": "module",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "jsdoc": "^4.0.4",
    "nodemon": "3.1.9",
    "stylelint": "^16.14.1",
    "stylelint-config-recommended": "^15.0.0",
    "vite": "^6.1.1",
    "wscat": "^5.0.1"
  },
  
  "dependencies": {
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "morgan": "1.10.0",
    "ws": "^8.12.0"
  }
}
